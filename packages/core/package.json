{
  "name": "@vjs-ui/core",
  "version": "0.1.0",
  "description": "VJS-UI 核心引擎",
  "keywords": [
    "vjs-ui",
    "core",
    "dsl",
    "reactive"
  ],
  "homepage": "https://github.com/vjsplus-j/vjs-ui#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vjsplus-j/vjs-ui.git",
    "directory": "packages/core"
  },
  "license": "MIT",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "dev": "vite build --watch",
    "build": "vite build && tsc --emitDeclarationOnly",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@vjs-ui/shared": "workspace:*",
    "@vjs-ui/utils": "workspace:*"
  },
  "devDependencies": {
    "@vitest/ui": "^1.0.0",
    "happy-dom": "^20.0.10",
    "jsdom": "^23.0.0",
    "typescript": "^5.3.2",
    "vite": "^5.0.0",
    "vitest": "^1.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
